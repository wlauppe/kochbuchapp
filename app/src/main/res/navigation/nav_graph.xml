<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navgraph"
    app:startDestination="@id/login_fragment">

    <fragment
        android:id="@+id/public_recipe_search_fragment"
        android:name="de.psekochbuch.exzellenzkoch.userinterfacelayer.view.PublicRecipeSearchFragment"
        android:label="PublicRecipeSearchFragment">
        <action
            android:id="@+id/action_public_recipe_search_fragment_to_display_searchlist_fragment"
            app:destination="@id/display_searchlist_fragment" />
    </fragment>

    <fragment
        android:id="@+id/display_searchlist_fragment"
        android:name="de.psekochbuch.exzellenzkoch.userinterfacelayer.view.DisplaySearchListFragment"
        android:label="DisplaySearchListFragment">
        <action
            android:id="@+id/action_display_searchlist_fragment_to_recipe_display_fragment"
            app:destination="@id/recipe_display_fragment" />
    </fragment>

    <fragment
        android:id="@+id/recipe_display_fragment"
        android:name="de.psekochbuch.exzellenzkoch.userinterfacelayer.view.RecipeDisplayFragment"
        android:label="RecipeDisplayFragment"
        >
        <action
            android:id="@+id/action_recipe_display_fragment_to_profile_display_fragment"
            app:destination="@id/profile_display_fragment" />
    </fragment>

    <fragment
        android:id="@+id/change_password_fragment"
        android:name="de.psekochbuch.exzellenzkoch.userinterfacelayer.view.ChangePasswordFragment"
        android:label="ChangePasswordFragment"
        >
        <action
            android:id="@+id/action_change_password_fragment_to_profile_display_fragment"
            app:destination="@id/profile_display_fragment" />
    </fragment>


    <fragment
        android:id="@+id/create_recipe_fragment"
        android:name="de.psekochbuch.exzellenzkoch.userinterfacelayer.view.CreateRecipeFragment"
        android:label="CreateRecipeFragment"
        />
    <fragment
        android:id="@+id/login_fragment"
        android:name="de.psekochbuch.exzellenzkoch.userinterfacelayer.view.LoginFragment"
        android:label="LoginFragment">

        <action
            android:id="@+id/action_login_fragment_to_profile_display_fragment"
            app:destination="@id/profile_display_fragment" />
        <action
            android:id="@+id/action_login_fragment_to_public_recipe_search_fragment"
            app:destination="@id/public_recipe_search_fragment" />


    </fragment>
    <fragment
        android:id="@+id/profile_display_fragment"
        android:name="de.psekochbuch.exzellenzkoch.userinterfacelayer.view.ProfileDisplayFragment"
        android:label="ProfileDisplayFragment">

        <action
            android:id="@+id/action_profile_display_fragment_to_recipe_display_fragment"
            app:destination="@id/recipe_display_fragment" />
        <action
            android:id="@+id/action_profile_display_fragment_to_profile_edit_fragment"
            app:destination="@id/profile_edit_fragment" />
    </fragment>
    <fragment
        android:id="@+id/profile_edit_fragment"
        android:name="de.psekochbuch.exzellenzkoch.userinterfacelayer.view.ProfileEditFragment"
        android:label="ProfileEditFragment"
        >
        <action
            android:id="@+id/action_profile_edit_fragment_to_profile_display_fragment"
            app:destination="@id/profile_display_fragment" />
    </fragment>
    <fragment
        android:id="@+id/recipe_list_fragment"
        android:name="de.psekochbuch.exzellenzkoch.userinterfacelayer.view.RecipeListFragment"
        android:label="RecipeListFragment"
        >
        <action
            android:id="@+id/action_recipe_list_fragment_to_create_recipe_fragment"
            app:destination="@id/create_recipe_fragment" />
    </fragment>
    <fragment
        android:id="@+id/registration_fragment"
        android:name="de.psekochbuch.exzellenzkoch.userinterfacelayer.view.RegistrateFragment"
        android:label="RegistrationFragment"
        >
        <action
            android:id="@+id/action_registration_fragment_to_profile_display_fragment"
            app:destination="@id/profile_display_fragment" />
    </fragment>


</navigation>