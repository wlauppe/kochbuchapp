<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="favouriteViewModel"
            type="de.psekochbuch.exzellenzkoch.userinterfacelayer.viewmodel.FavouriteViewmodel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_favourites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/favourites_head_title"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="normal" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="10dp"
            android:id="@+id/recyclerView_favourites" />
    </LinearLayout>
</layout>