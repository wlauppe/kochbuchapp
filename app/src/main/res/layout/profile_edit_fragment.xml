<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="237dp"
            android:layout_height="166dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_enter_userID"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:text="@string/enter_user_id"
                android:textAlignment="center"
                android:textSize="25dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="172dp"
            android:layout_height="168dp"
            android:layout_marginTop="40dp"
            tools:srcCompat="@tools:sample/avatars[11]" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_personal_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="schreibe etwas über dich" />

        <EditText
            android:id="@+id/editText_personal_data"
            android:layout_width="match_parent"
            android:layout_height="385dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:text="Meine Vorbilder sind Christopher KOHLumbus und Chris BREAD"
            android:gravity="start|top"

            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_change_login_data"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="Login-Daten ändern" />

            <Button
                android:id="@+id/button_save_profile_changes"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:text="speichern" />
        </LinearLayout>

        <Button
            android:id="@+id/button_delete_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil löschen" />

    </LinearLayout>

</LinearLayout>