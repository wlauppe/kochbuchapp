<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
            <variable
                name="recipeListViewModel"
                type="de.psekochbuch.exzellenzkoch.userinterfacelayer.viewmodel.RecipeListViewmodel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/recipe_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recipe_list_recipe_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView_recipe_list_fragment">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/button_create_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recipe_list_create_recipe_button" />
    </LinearLayout>
</layout>
